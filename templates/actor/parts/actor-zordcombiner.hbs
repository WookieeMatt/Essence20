<span class="flex-group-center">
  <h1>{{localize 'E20.zordCombiner'}}</h1>
</span>

{{#each @root.zords as |zord|}}
<li class="zord flexrow" data-zord-id="{{zord._id}}">
  <div>
    <span>{{ localize 'E20.name' }}: {{zord.name}}</span>
  </div>
  <div>
    <span>{{ localize 'E20.health' }}: </span><input class="two-digit-input" type="number" name="zord.system.health" value="{{zord.system.health}}" />
  </div>
  <div>
    <span>{{ localize 'E20.ranger' }}: {{zord.system.ranger}}</span>
  </div>
  <div class="item-controls">
    <a class="item-control zord-delete" title="{{localize 'E20.deletezordCombiner'}}"><i class="fas fa-trash"></i></a>
  </div>
</li>
<div>
  <span>{{ localize 'E20.megaformTrait' }}: {{zord.system.megaformTrait.name}}</span>
</div>
{{/each}}
