<div>{{localize 'E20.ItemDescription'}}: {{{item.system.description}}}</div>

<div class="chip-section">
  <span class="chip" name="chip.armor.availability">{{lookup @root.config.availabilities item.system.availability}}</span>
  <span class="chip" name="chip.armor.classification">{{lookup @root.config.armorClassifications item.system.classification}}</span>
  <span class="chip" name="chip.armor.bonusEvasion">{{localize 'E20.ArmorBonusEvasion'}}: {{item.system.bonusEvasion}}</span>
  <span class="chip" name="chip.armor.bonusToughness">{{localize 'E20.ArmorBonusToughness'}}: {{item.system.bonusToughness}}</span>

  {{#each item.system.traits as |trait|}}
  <span class="chip" name="chip.armor.traits.{{type}}">{{lookup @root.config.armorTraits trait}}</span>
  {{/each}}

  {{#if item.system.source.book}}
  <span class="chip" name="chip.source.book">{{item.system.source.book}}</span>
  {{/if}}
</div>
