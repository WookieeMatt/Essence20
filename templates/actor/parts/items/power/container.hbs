{{#>"systems/essence20/templates/actor/parts/misc/collapsible-item-container.hbs" items=@root.powers title='E20.ItemTypePowerPlural' dataType='power'}}
  {{#*inline "roll-button" item}}
    {{#if item.system.canActivate}}
      <a class="rollable" data-roll-type={{item.type}} data-tooltip="{{localize 'E20.PowerRollTitle'}}"><i class="fas fa-battery-bolt"></i></a>
    {{/if}}
  {{/inline}}

  {{#*inline "expand-details" item}}
    {{> "systems/essence20/templates/actor/parts/items/power/details.hbs"}}
  {{/inline}}

  {{#*inline "item-label" item}}
    <strong>
      {{item.name}}
      {{#if (eq @root.actor.type "npc")}}
        :
        {{#if system.usesPer}}
          {{system.usesPer}}/{{lookup @root.config.usesInterval system.usesInterval}},
        {{/if}}
        {{lookup @root.config.actionTypes system.actionType}}
      {{/if}}
    </strong>
  {{/inline}}
{{/"systems/essence20/templates/actor/parts/misc/collapsible-item-container.hbs"}}
