<div style="flex-grow: 0;">
  <div class="npc-defenses">
    {{#each system.defenses as |fields defense|}}
    <div class="resource flexcol">
      <label class="resource flex-group-center">{{localize (lookup @root.config.defenses defense)}}</label>
      <input type="number" class="centered-input" name="system.defenses.{{defense}}.value" value="{{fields.value}}" />
    </div>
    {{/each}}
  </div>
</div>
