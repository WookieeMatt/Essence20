<div class="npc-defenses" style="flex-grow: 1; border-color: {{system.color}};">
  <div class="flexrow" style="height: 100%;">
    <div class="resource flexcol">
      <label class="resource flex-group-center">{{localize @root.config.movementTypes.aerial}}</label>
      <input class="centered-input" type="text" name="system.movement.aerial" value="{{system.movement.aerial}}" />
    </div>
    <div class="resource flexcol">
      <label class="resource flex-group-center">{{localize @root.config.movementTypes.ground}}</label>
      <input class="centered-input" type="number" name="system.movement.ground" value="{{system.movement.ground}}" />
    </div>
    <div class="resource flexcol">
      <label class="resource flex-group-center">{{localize @root.config.movementTypes.swim}}</label>
      <input class="centered-input" type="number" name="system.movement.swim" value="{{system.movement.swim}}" />
    </div>
  </div>
</div>
