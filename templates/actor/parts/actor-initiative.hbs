<div class="resource initiative" style="border-color: {{system.color}};">
  <span>{{localize 'E20.ActorInitiative'}}</span>
  <div class="initiative-dropdown flex-group-center">
    <div class="item-image">
      <a class="rollable" data-roll-type="initiative" data-upshift ={{@root.system.initiative.shiftUp}} data-downshift ={{@root.system.initiative.shiftDown}}>
        <i class="fas fa-dice-d20"></i>
      </a>
    </div>
    <select name="system.initiative.shift">
      {{selectOptions @root.config.initiativeShifts selected=system.initiative.shift localize=true}}
    </select>
    <span for="system.initiative.modifier">+</span>
    <input class="one-digit-input" type="number" name="system.initiative.modifier"
      value="{{system.initiative.modifier}}" />
  </div>
</div>
