{{!-- Powers --}}
{{#>"systems/essence20/templates/actor/parts/actor-collapsible-item-container.hbs" items=@root.powers title='E20.ItemTypePowerPlural' dataType='power'}}
  {{#*inline "roll-button" item}}
    <a class="rollable" data-roll-type={{item.type}} title="{{localize 'E20.PowerRollTitle'}}"><i class="fas fa-battery-bolt"></i></a>
  {{/inline}}

  {{#*inline "expand-details" item}}
  <div>{{localize 'E20.ItemDescription'}}: {{{item.system.description}}}</div>
  {{/inline}}

  {{#*inline "item-label" item}}
    <select class="inline-edit" data-field="system.classFeatureId" name="system.classFeature">
      {{#select item.system.classFeatureId}}
      {{#each @root.classFeaturesById as |name id|}}
      <option value="{{id}}">{{name}}</option>
      {{/each}}
      {{/select}}
    </select>
    {{item.name}}
  {{/inline}}

  {{#*inline "chips" item}}
  {{#if item.system.source.book}}
  <span class="chip" name="chip.source.book">{{item.system.source.book}}</span>
  {{/if}}
  {{/inline}}
{{/"systems/essence20/templates/actor/parts/actor-collapsible-item-container.hbs"}}
