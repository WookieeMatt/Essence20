{{!-- Personal Power --}}
<div class="powers-section">
  <div class="resource flex-group-center">
    <label for="system.personalPower.value" class="resource-label">{{localize 'E20.PowerRangerPersonalPower'}}</label>
    <div class="resource-content flexrow flex-center flex-between">
      <input type="number" name="system.personalPower.value" value="{{system.personalPower.value}}" />
      <span> / </span>
      <input type="number" name="system.personalPower.max" value="{{system.personalPower.max}}" />
    </div>
  </div>
</div>

{{!-- Powers --}}
{{#>"systems/essence20/templates/actor/parts/actor-collapsible-item-container.hbs" items=@root.powers title='E20.ItemTypePowerPlural' dataType='power'}}
  {{#*inline "expand-details" item}}
  <div>{{localize 'E20.ItemDescription'}}: {{{item.system.description}}}</div>
  {{/inline}}

  {{#*inline "chips" item}}
  {{#if item.system.source.book}}
  <span class="chip" name="chip.source.book">{{item.system.source.book}}</span>
  {{/if}}
  {{/inline}}
{{/"systems/essence20/templates/actor/parts/actor-collapsible-item-container.hbs"}}
