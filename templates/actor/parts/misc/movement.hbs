<div class="stats-container flexrow flex-group-center" style="border-color: {{system.color}};">
  <div class="flexcol">
    <label>{{localize @root.config.movementTypes.aerial}}</label>
      <input class="centered-input" type="text" name="system.movement.aerial.total" value="{{system.movement.aerial.total}}" {{system.movementIsReadOnly}} />

  </div>
  <div class="resource flexcol">
    <label>{{localize @root.config.movementTypes.ground}}</label>
      <input class="centered-input" type="number" name="system.movement.ground.total" value="{{system.movement.ground.total}}" {{system.movementIsReadOnly}} />

  </div>
  <div class="resource flexcol">
    <label>{{localize @root.config.movementTypes.swim}}</label>
      <input class="centered-input" type="number" name="system.movement.swim.total" value="{{system.movement.swim.total}}" {{system.movementIsReadOnly}} />

  </div>
</div>
