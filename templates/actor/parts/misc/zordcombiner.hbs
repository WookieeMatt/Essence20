<div class="zord-combiners">
  <div class="flexrow" style="gap: 6px;">
    {{#each @root.zords as |zord|}}
    <div class="zord item stats-container" style="border-color: {{zord.system.color}};" data-zord-id="{{zord._id}}">
      <div style="text-align: center;">
        <img class="zord-img" src="{{zord.img}}" data-edit="img" title="{{zord.name}}" />
      </div>

      <div class="flexrow" style="align-items:center; gap: 6px;">
        <div style="white-space: nowrap;">{{ localize 'E20.ActorName' }}: {{zord.name}}</div>
        <div class="item-controls">
          <a class="item-control zord-delete" title="{{localize 'E20.deletezordCombiner'}}">
            <i class="fas fa-trash"></i>
          </a>
        </div>
      </div>

      <div>
        {{ localize 'E20.ActorHealth' }}: <input class="two-digit-input" type="number" name="zord.system.health" value="{{zord.system.health.value}}" min="0" step="1" />
      </div>

      <div>
        <span>{{ localize 'E20.ZordRanger' }}: {{zord.system.ranger}}</span>
      </div>

      <div>
        <div>{{ localize 'E20.ItemTypeMegaformTraitPlural' }}:</div>
        <ul>
          {{#each zord.items as |item|}}
          {{#ifEquals item.type 'megaformTrait'}}
          <li>{{item.name}}</li>
          {{/ifEquals}}
          {{/each}}
        </ul>
      </div>

    </div>
    {{/each}}
  </div>
</div>
