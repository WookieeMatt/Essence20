  {{!-- Actor Sheet Body --}}
  <section class="sheet-body">
    {{!-- Skills Tab --}}
    <div class="tab skills flexcol" data-group="primary" data-tab="skills">
      {{> "systems/essence20/templates/actor/parts/misc/defenses.hbs"}}
      {{> "systems/essence20/templates/actor/parts/misc/common.hbs"}}
      {{> "systems/essence20/templates/actor/parts/misc/pc-skills.hbs"}}
    </div>

    {{!-- Combat Tab --}}
    <div class="tab combat flexcol" data-group="primary" data-tab="combat">
      {{> "systems/essence20/templates/actor/parts/misc/defenses.hbs" bonusDisplayType='input'}}
      {{> "systems/essence20/templates/actor/parts/misc/immunities-resistances.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/rolePoints/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/weapon/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/armor/container.hbs"}}
    </div>

    {{!-- Gear Tab --}}
    <div class="tab gear flexcol" data-group="primary" data-tab="gear">
      {{#if (ne @root.role.system.version 'myLittlePony')}}
        {{> "systems/essence20/templates/actor/parts/misc/training.hbs"}}
      {{/if}}
      {{> "systems/essence20/templates/actor/parts/items/gear/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/weapon/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/armor/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/shield/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/alteration/container.hbs"}}
      {{#if system.canSpellcast}}
        {{> "systems/essence20/templates/actor/parts/items/magicBauble/container.hbs"}}
      {{/if}}
    </div>

    {{!-- Powers Tab --}}
    <div class="tab powers flexcol" data-group="primary" data-tab="powers">
      {{> "systems/essence20/templates/actor/parts/misc/power-points.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/power/container.hbs"}}
    </div>

    {{!-- Spells Tab --}}
    <div class="tab spells flexcol" data-group="primary" data-tab="spells">
      {{> "systems/essence20/templates/actor/parts/misc/spells.hbs"}}
    </div>

    {{!-- Perks Tab --}}
    <div class="tab perks flexcol" data-group="primary" data-tab="perks">
      {{> "systems/essence20/templates/actor/parts/items/perk/container.hbs" perkType="influence" perks=@root.perks.influence title="E20.PerkInfluence" alwaysShow="true" hidePlusButton="true" defaultText="E20.DefaultTextInfluencePerk"}}
      {{> "systems/essence20/templates/actor/parts/items/perk/container.hbs" perkType="origin" perks=@root.perks.origin title="E20.PerkOrigin" alwaysShow="true" hidePlusButton="true" defaultText="E20.DefaultTextOriginPerk"}}
      {{> "systems/essence20/templates/actor/parts/items/perk/container.hbs" perkType="general" perks=@root.perks.general title="E20.PerkGeneral" alwaysShow="true"}}
      {{> "systems/essence20/templates/actor/parts/items/perk/container.hbs" perkType="faction" perks=@root.perks.faction title="E20.PerkFaction"}}
      {{> "systems/essence20/templates/actor/parts/items/perk/container.hbs" perkType="division" perks=@root.perks.division title="E20.PerkDivision"}}
      {{> "systems/essence20/templates/actor/parts/items/perk/container.hbs" perkType="contact" perks=@root.perks.contact title="E20.PerkContact"}}
      {{> "systems/essence20/templates/actor/parts/items/perk/container.hbs" perkType="role" perks=@root.perks.role title="E20.PerkRole" alwaysShow="true" hidePlusButton="true" defaultText="E20.DefaultTextRolePerk"}}
    </div>

    {{!-- Zords Tab --}}
    <div class="tab combiners flexcol" data-group="primary" data-tab="zords">
      {{> "systems/essence20/templates/actor/parts/misc/system-actors.hbs"}}
    </div>

    {{!-- Contacts Tab --}}
    <div class="tab contacts flexcol" data-group="primary" data-tab="contacts">
      {{> "systems/essence20/templates/actor/parts/misc/system-actors.hbs"}}
    </div>

    {{!-- Alt Mode Tab --}}
    <div class="tab altmodes flexcol" data-group="primary" data-tab="altmode">
      {{> "systems/essence20/templates/actor/parts/misc/energon.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/altMode/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/weapon/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/upgrade/container.hbs" items=@root.upgrades}}
      {{> "systems/essence20/templates/actor/parts/misc/defenses.hbs"}}
    </div>

    {{!-- Background Tab --}}
    <div class="tab background flexcol" data-group="primary" data-tab="background">
      {{> "systems/essence20/templates/actor/parts/misc/background.hbs"}}
    </div>

    {{!-- Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/essence20/templates/actor/parts/misc/active-effects.hbs"}}
    </div>

    {{!-- Notes Tab --}}
    <div class="tab notes" data-group="primary" data-tab="notes">
      {{> "systems/essence20/templates/actor/parts/misc/notes.hbs"}}
    </div>
  </section>
