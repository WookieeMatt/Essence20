<div class="items-container">
  <ol class="items-list">
    <li class="items flexrow">
      <div class="flexrow">
        <div class="item-name flexrow">{{localize 'E20.weapons'}}</div>
        <div class="item-controls">
          <a class="item-create" data-type="weapon" title="{{ localize 'E20.addWeapon' }}"><i class="fas fa-plus"></i>
          </a>
        </div>
      </div>
    </li>
    </ol>
    {{#each @root.weapons as |weapon|}}
  <ol class="items-list">
    <li class="items flexrow" data-item-id="{{weapon._id}}" style="margin-left: 20px;">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="skill" data-skill="{{weapon.system.classification.skill}}"><i class="fas fa-dice-d20"></i></a>
        </div>
        <div>{{weapon.name}}</div>
        <div>{{localize 'E20.damage'}}: {{weapon.system.damage.value}} {{localize (concat 'E20.elements.'
          weapon.system.damage.element)}}</div>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="{{localize 'E20.editWeapon'}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize 'E20.deleteWeapon'}}"><i class="fas fa-trash"></i></a>
      </div>
    </li>
    {{/each}}
  </ol>
</div>