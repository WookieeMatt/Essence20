<section class="item-list">
  <h3>{{localize 'E20.weapons'}}</h3>
  <a class="item-create" data-type="weapon" title="{{ localize 'E20.addWeapon' }}">
    <i class="fas fa-plus"></i>
  </a>
  {{#each @root.weapons as |weapon|}}
    <li class="item flexrow" data-item-id="{{weapon._id}}">
      <div class="item-name">
        <div class="item-image">
          <a class="rollable" data-roll-type="weapon"><i class="fas fa-dice-d20"></i></a>
        </div>
        <div>{{weapon.name}} - {{weapon.system.description}}</div>
        <div>{{localize 'E20.range'}}: {{#if weapon.system.range.reachMultiplier}}{{weapon.system.range.reachMultiplier}} Reach{{else}}{{weapon.system.range.value}}{{/if}}</div>
        <div>{{localize 'E20.numHands'}}: {{weapon.system.numHands}}</div>
        <div>{{localize 'E20.shift'}}: {{localize (concat 'E20.shifts.' weapon.system.shift)}}</div>
        <div>{{localize 'E20.damage'}}: {{weapon.system.damage.value}} {{localize (concat 'E20.elements.' weapon.system.damage.element)}}</div>
        <div>{{localize 'E20.traits'}}: {{weapon.system.traits}}</div>
      </div>
      <div class="item-controls">
        <a class="item-control item-edit" title="{{localize 'E20.editWeapon'}}"><i class="fas fa-edit"></i></a>
        <a class="item-control item-delete" title="{{localize 'E20.deleteWeapon'}}"><i class="fas fa-trash"></i></a>
      </div>
    </li>
  {{/each}}
</section>
