<div class="items-container">
  <ol class="items-list">
    <li class="items flexrow">
      <div class="flexrow">
        <div class="item-name flexrow">{{localize 'E20.weapons'}}</div>
        <div class="item-controls">
          <a class="item-create" data-type="weapon" title="{{ localize 'E20.addWeapon' }}"><i class="fas fa-plus"></i>
          </a>
        </div>
      </div>
    </li>
    </ol>
  <ol class="items-list">
    {{#each @root.weapons as |weapon|}}
      <li class="item flexrow" data-item-id="{{weapon._id}}">
        <details>
          <summary class="flexrow">
            <input class="inline-edit" data-field="system.equipped" type="checkbox" name="weapon.{{@index}}.equipped" {{checked weapon.system.equipped}}/>
            {{weapon.name}}
          </summary>
          <div class="expand-details">
            <div>{{localize 'E20.effect'}}: {{weapon.system.effect}}</div>
            <div>{{localize 'E20.alternateEffects'}}: {{weapon.system.alternateEffects}}</div>
            <div>{{{weapon.system.description}}}</div>
          </div>
        </details>
        <div class="item-controls">
          <a class="item-control item-edit" title="{{localize 'E20.editWeapon'}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize 'E20.deleteWeapon'}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>
