<div class="perks-section">
    <h3>{{localize 'E20.perks'}}</h3>
    <a class="item-create" data-type="perk" title="{{ localize 'E20.addPerk' }}">
        <i class="fas fa-plus"></i>
    </a>

    {{#each @root.perks as |perk|}}
    <li class="item flexrow" data-item-id="{{perk._id}}">
        <div class="item-name">
            <input class="inline-edit" data-field="name" type="text" name="perk.{{@index}}.name" value="{{perk.name}}" placeholder="{{ localize 'E20.name' }}"/>
            <input class="inline-edit" data-field="data.source" type="text" name="perk.{{@index}}.source" value="{{perk.data.source}}" placeholder="{{ localize 'E20.source' }}"/>
            <input class="inline-edit" data-field="data.prerequisite" type="text" name="perk.{{@index}}.prerequisite" value="{{perk.data.prerequisite}}" placeholder="{{ localize 'E20.prerequisite' }}"/>
            <textarea class="inline-edit" data-field="data.description" name="perk.{{@index}}.description" placeholder="{{localize 'E20.description'}}">{{perk.data.description}}</textarea>
        </div>
        <div class="item-controls">
            <a class="item-control item-delete" title="{{localize 'E20.deletePerk'}}"><i class="fas fa-trash"></i></a>
        </div>
    </li>
    {{/each}}
</div>
