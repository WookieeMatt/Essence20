<form class="{{cssClass}} {{actor.type}}" autocomplete="off">
  {{!-- Actor Sheet Header --}}
  {{> "systems/essence20/templates/actor/parts/headers/pony.hbs"}}

  {{!-- Tabs --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" style="border-color: {{system.color}};" data-tab="skills"> {{ localize "E20.TabSkills" }}</a>
    <a class="item" style="border-color: {{system.color}};" data-tab="combat">{{ localize "E20.TabCombat" }}</a>
    <a class="item" style="border-color: {{system.color}};" data-tab="gear">{{ localize "E20.TabGear" }}</a>
    <a class="item" style="border-color: {{system.color}};" data-tab="spells">{{ localize "E20.TabSpells" }}</a>
    {{#if system.canMorph}}
      <a class="item" style="border-color: {{system.color}};" data-tab="powers">{{ localize "E20.TabPowers" }}</a>
    {{/if}}
    <a class="item" style="border-color: {{system.color}};" data-tab="perks">{{ localize "E20.TabPerks" }}</a>
    {{#if system.canTransform}}
      <a class="item" style="border-color: {{system.color}};" data-tab="altmode">{{ localize "E20.TabAltMode" }}</a>
    {{/if}}
    <a class="item" style="border-color: {{system.color}};" data-tab="background">{{ localize "E20.TabBackground" }}</a>
    <a class="item" style="border-color: {{system.color}};" data-tab="effects">{{ localize "E20.TabEffects" }}</a>
    <a class="item" style="border-color: {{system.color}};" data-tab="notes">{{ localize "E20.TabNotes" }}</a>
  </nav>

  <hr style="border-color: {{system.color}};"/>

  {{!-- Actor Sheet Body --}}
  <section class="sheet-body">
    {{!-- Skills Tab --}}
    <div class="tab skills flexcol" data-group="primary" data-tab="skills">
      {{> "systems/essence20/templates/actor/parts/misc/morph-transform.hbs"}}
      {{> "systems/essence20/templates/actor/parts/misc/defenses.hbs"}}
      {{> "systems/essence20/templates/actor/parts/misc/common.hbs"}}
      {{> "systems/essence20/templates/actor/parts/misc/pc-skills.hbs"}}
    </div>

    {{!-- Combat Tab --}}
    <div class="tab combat flexcol" data-group="primary" data-tab="combat">
      {{> "systems/essence20/templates/actor/parts/misc/defenses.hbs" bonusDisplayType='input'}}
      {{> "systems/essence20/templates/actor/parts/items/classFeature/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/weapon/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/armor/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/contact/container.hbs"}}
    </div>

    {{!-- Gear Tab --}}
    <div class="tab gear flexcol" data-group="primary" data-tab="gear">
      {{> "systems/essence20/templates/actor/parts/items/gear/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/weapon/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/armor/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/magicBauble/container.hbs"}}
    </div>

    {{!-- Powers Tab --}}
    <div class="tab powers flexcol" data-group="primary" data-tab="powers">
      {{> "systems/essence20/templates/actor/parts/items/power/container.hbs"}}
    </div>

    {{!-- Spells Tab --}}
    <div class="tab spells flexcol" data-group="primary" data-tab="spells">
      {{> "systems/essence20/templates/actor/parts/misc/spells.hbs"}}
    </div>

    {{!-- Perks Tab --}}
    <div class="tab perks" data-group="primary" data-tab="perks">
      {{> "systems/essence20/templates/actor/parts/items/perk/container.hbs"}}
    </div>

    {{!-- Alt Mode Tab --}}
    <div class="tab background flexcol" data-group="primary" data-tab="altmode">
      {{> "systems/essence20/templates/actor/parts/items/altMode/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/weapon/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/items/upgrade/container.hbs"}}
      {{> "systems/essence20/templates/actor/parts/misc/defenses.hbs"}}
    </div>

    {{!-- Origin Tab --}}
    <div class="tab background flexcol" data-group="primary" data-tab="background">
      {{> "systems/essence20/templates/actor/parts/misc/background.hbs"}}
    </div>

    {{!-- Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/essence20/templates/actor/parts/misc/active-effects.hbs"}}
    </div>

    {{!-- Notes Tab --}}
    <div class="tab notes" data-group="primary" data-tab="notes">
      {{> "systems/essence20/templates/actor/parts/misc/notes.hbs"}}
    </div>
  </section>
</form>
