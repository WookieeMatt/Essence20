<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Actor Sheet Header --}}
  {{> "systems/essence20/templates/actor/parts/actor-gijoe-header.hbs"}}

  {{!-- Actor Sheet Body --}}
  <section class="sheet-body">
    <h3>{{localize 'E20.defensesStr'}}</h3>
    <div>{{config.defenses.toughness}}: {{sum system.defenses.toughness equippedArmorEffect}}</div>
    <div>{{config.defenses.evasion}}: {{system.defenses.evasion}}</div>
    <div>{{config.defenses.willpower}}: {{system.defenses.willpower}}</div>
    <div>{{config.defenses.cleverness}}: {{system.defenses.cleverness}}</div>

    {{> "systems/essence20/templates/actor/parts/actor-common.hbs"}}
    {{> "systems/essence20/templates/actor/parts/actor-accordion-skills.hbs"}}
  </section>
</form>
