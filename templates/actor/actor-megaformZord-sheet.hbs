<form class="{{cssClass}} {{actor.type}}" autocomplete="off">
  <header>
    {{!-- Actor Sheet Header --}}
    {{> "systems/essence20/templates/actor/parts/actor-base-header.hbs"}}
    <div class="zord-header">
      <input type="text" name="system.prerequisite" value="{{system.prerequisite}}"
        placeholder="{{ localize 'E20.prerequisite' }}" />
      <input type="text" name="system.ranger" value="{{system.ranger}}" placeholder="{{ localize 'E20.ranger' }}" />
      <input type="checkbox" name="system.isCombiner" {{checked system.isCombiner}} />
    </div>

  </header>
  {{!-- Actor Sheet Body --}}
  <section class="sheet-body">
    <div class="zord-sheet-grid">

      <div class="flexcol">
        <div class="flexrow">
          {{> "systems/essence20/templates/actor/parts/actor-initiative.hbs"}}
          {{> "systems/essence20/templates/actor/parts/actor-movement.hbs"}}
          <div class="stats-container">
            <div class="flexrow flex-group-center">
              <span class="essence-label">{{localize 'E20.essences.strength'}}</span>
              <input class="two-digit-input" type="number" name="system.essences.strength" value="{{system.essences.strength}}" />
            </div>
            <div class="flexrow flex-group-center">
              <span class="essence-label">{{localize 'E20.essences.speed'}}</span>
              <input class="two-digit-input" type="number" name="system.essences.speed" value="{{system.essences.speed}}" />
            </div>
          </div>
        </div>

        {{> "systems/essence20/templates/actor/parts/actor-npc-defenses.hbs"}}
        {{> "systems/essence20/templates/actor/parts/actor-accordion-skills.hbs"}}
        
        <div class="zord-container-1">
          {{!-- Features --}}
          {{> "systems/essence20/templates/actor/parts/actor-collapsible-item-container.hbs" items=@root.features title='E20.features' dataType='feature'}}
          {{> "systems/essence20/templates/actor/parts/actor-traits.hbs"}}
        </div>
      </div>
      <div class="zord-weapons">
        {{> "systems/essence20/templates/actor/parts/actor-weapons.hbs"}}
      </div>
      <div class="zord-features">
        {{> "systems/essence20/templates/actor/parts/actor-zordcombiner.hbs"}}
      </div>
    </div>
  </section>
</form>
