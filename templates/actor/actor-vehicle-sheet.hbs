<form class="{{cssClass}} {{actor.type}}" autocomplete="off">
  {{!-- Actor Sheet Header --}}
  {{> "systems/essence20/templates/actor/parts/headers/actor-vehicle-header.hbs"}}

  {{!-- Tabs --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" style="border-color: {{system.color}};" data-tab="main"> {{ localize "E20.TabMain" }}</a>
    <a class="item" style="border-color: {{system.color}};" data-tab="notes">{{ localize "E20.TabNotes" }}</a>
  </nav>

  {{!-- Actor Sheet Body --}}
  <section class="sheet-body flexcol">
    {{!-- Main Tab --}}
    <div class="tab main flexcol" data-group="primary" data-tab="main">
      {{> "systems/essence20/templates/actor/parts/actor-npc-defenses.hbs"}}
      {{> "systems/essence20/templates/actor/parts/actor-common.hbs"}}

      <div class="npc-row">
        <div class="npc-column-1">
          {{> "systems/essence20/templates/actor/parts/actor-accordion-skills.hbs"}}
        </div>

        <div class="npc-column-2">
          {{> "systems/essence20/templates/actor/parts/actor-weapons.hbs"}}

          <div class="stats-container" style="flex-grow: 0;">
            <div class="flexrow">
              <div class="resource flexcol">
                <label class="resource flex-group-center">{{localize 'E20.VehicleCrew'}}</label>
                <input type="text" class="centered-input" name="system.crew.description"
                  value="{{system.crew.description}}" />
              </div>
              <div class="resource flexcol">
                <label class="resource flex-group-center">
                  {{localize 'E20.VehicleFirepoints'}}
                </label>
                <input type="number" class="centered-input" name="system.firepoints.value"
                  value="{{system.firepoints.value}}" />
              </div>
              <div class="resource flexcol">
                <label class="resource flex-group-center">
                  {{localize 'E20.VehicleDrivers'}}
                </label>
                <input type="number" class="centered-input" name="system.crew.numDrivers"
                  value="{{system.crew.numDrivers}}" />
              </div>
              <div class="resource flexcol">
                <label class="resource flex-group-center">
                  {{localize 'E20.VehiclePassengers'}}
                </label>
                <input type="number" class="centered-input" name="system.crew.numPassengers"
                  value="{{system.crew.numPassengers}}" />
              </div>
            </div>
            <div class="flexrow">
              <textarea name="system.firepoints.description"
                placeholder="{{localize 'E20.VehicleFirepointsDescription'}}">{{system.firepoints.description}}</textarea>
            </div>
          </div>

          {{> "systems/essence20/templates/actor/parts/actor-traits.hbs"}}
        </div>
      </div>
    </div>

    {{!-- Notes Tab --}}
    <div class="tab notes" data-group="primary" data-tab="notes">
      {{> "systems/essence20/templates/actor/parts/actor-notes.hbs"}}
    </div>
  </section>
</form>
