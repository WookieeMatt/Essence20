<form class="{{cssClass}} {{actor.type}}" autocomplete="off">
  {{!-- Actor Sheet Header --}}
  {{> "systems/essence20/templates/actor/parts/headers/actor-vehicle-header.hbs"}}

  {{!-- Actor Sheet Body --}}
  <section class="sheet-body flexcol">
    {{> "systems/essence20/templates/actor/parts/actor-npc-defenses.hbs"}}
    {{> "systems/essence20/templates/actor/parts/actor-common.hbs"}}
    {{> "systems/essence20/templates/actor/parts/actor-accordion-skills.hbs"}}

    <div class="vehicle-container">
      <span>{{localize 'E20.VehicleCrew'}}</span>
      <input type="text" name="system.crew.description" value="{{system.crew.description}}" />

      <span>{{localize 'E20.VehicleFirepoints'}}</span>
      <input type="number" name="system.firepoints.value" value="{{system.firepoints.value}}" />

      <span>{{localize 'E20.VehicleDrivers'}}</span>
      <input type="number" name="system.crew.numDrivers" value="{{system.crew.numDrivers}}" />

      <span>{{localize 'E20.VehicleFirepointsDescription'}}</span>
      <textarea rows="3" name="system.firepoints.description">{{system.firepoints.description}}</textarea>

      <span>{{localize 'E20.VehiclePassengers'}}</span>
      <input type="number" name="system.crew.numPassengers" value="{{system.crew.numPassengers}}" />
    </div>
    {{> "systems/essence20/templates/actor/parts/actor-traits.hbs"}}
  </section>
</form>
