<form class="{{cssClass}} {{actor.type}}" autocomplete="off">
  <div class="sheet-header">
    {{!-- Actor Sheet Header --}}
    <span class="resource flex-group-center npc-vert-center">
      <div class="npc-image npc-vert-center">
        <img class="profile-img" src="{{actor.img}}" data-edit="img" />
      </div>
    </span>
    <div class="pr-header-fields">
      <div class="header-fields flex-group-center">
        <label for="name" class="resource-label">{{localize 'E20.ActorName'}}</label>
        <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
      </div>
      <div class="resource flex-group-center">
        {{localize 'E20.NpcThreatLevel'}}
        <input type="number" name="system.threatLevel" value="{{system.threatLevel}}" />
      </div>
    </div>
  </div>

  {{!-- Actor Sheet Body --}}
  <section class="sheet-body flexcol">
    {{> "systems/essence20/templates/actor/parts/actor-npc-defenses.hbs"}}
    {{> "systems/essence20/templates/actor/parts/actor-common.hbs"}}
    {{> "systems/essence20/templates/actor/parts/actor-accordion-skills.hbs"}}

    <div class="vehicle-container">
      <h3>Crew</h3>
      <input type="text" name="system.crew.description" value="{{system.crew.description}}"
        placeholder="{{ localize 'E20.ActorDescription' }}" />
      <span>{{localize 'E20.VehicleDrivers'}}</span><input type="number" name="system.crew.numDrivers"
        value="{{system.crew.numDrivers}}" />
      <span>{{localize 'E20.VehiclePassengers'}}</span><input type="number" name="system.crew.numPassengers"
        value="{{system.crew.numPassengers}}" />

      <h3>Firepoints</h3>
      <input type="text" name="system.firepoints.description" value="{{system.firepoints.description}}"
        placeholder="{{ localize 'E20.ActorDescription' }}" />
      <span>{{localize 'E20.VehicleFirepoints'}}</span><input type="number" name="system.firepoints.value"
        value="{{system.firepoints.value}}" />
    </div>
    {{> "systems/essence20/templates/actor/parts/actor-traits.hbs"}}
  </section>
</form>