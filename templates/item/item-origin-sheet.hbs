<form class="{{cssClass}}" autocomplete="off">
  {{!-- Item Sheet Header --}}
  {{> "systems/essence20/templates/item/parts/item-header.hbs"}}

  {{!-- Tabs --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">{{ localize "E20.TabDescription" }}</a>
    <a class="item" data-tab="details">{{ localize "E20.TabDetails" }}</a>
  </nav>

  {{!-- Item Sheet Body --}}
  <section class="sheet-body item-sheet">
    {{!-- Description Tab --}}
    <div class="tab description flexcol" data-group="primary" data-tab="description">
      {{> "systems/essence20/templates/item/parts/item-description.hbs"}}
    </div>
    {{!-- Details Tab --}}
    <div class="tab details flexcol" data-group="primary" data-tab="details">
      {{!-- Starting Health --}}
      <div>
        {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginStartingHealth'}}
        {{#*inline "item-field-inputs"}}
        <input type="text" name="system.role" value="{{system.startingHealth}}" />
        {{/inline}}
        {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}
      </div>
      <div>
        {{!-- Essence Score Increase Option 1 --}}
        <label for="system.originEssence1" class="resource-label">{{localize 'E20.OriginEssenceScoreIncrease'}}</label>
        <select name="system.originEssence1" id="system.originEssence1">
          {{selectOptions @root.config.originEssences selected=system.originEssence1 localize=true}}
        </select>
      </div>
      <div>
        {{!-- Essence Score Increase Option 2 --}}
        <label for="system.originEssence2" class="resource-label">{{localize 'E20.OriginEssenceScoreIncrease'}}</label>
        <select name="system.originEssence2" id="system.originEssence2">
          {{selectOptions @root.config.originEssences selected=system.originEssence2 localize=true}}
        </select>
      </div>
      
      {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginSkillOptions'}}
      {{#*inline "item-field-inputs"}}
      <div class="flexcol">
        {{#each config.originEssenceSkills as |name type|}}
          <div class="flexrow">
            <input class="inline-edit item-label-checkbox" type="checkbox" name="system.originSkillOptions.{{type}}" {{checked (lookup @root.originSkillOptions type)}}/>
            <span class="origin-skill-options-checkbox-label">{{localize name}}</span>
          </div>
        {{/each}}
      </div>
      {{/inline}}
      {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}

      {{!-- Ground Movement --}}
      {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginGroundMovement'}}
      {{#*inline "item-field-inputs"}}
      <textarea rows="5" name="system.groundMovement">{{system.groundMovement}}</textarea>
      {{/inline}}
      {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}

      {{!-- Languages --}}
      {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginLanguages'}}
      {{#*inline "item-field-inputs"}}
      <textarea rows="5" name="system.languages">{{system.languages}}</textarea>
      {{/inline}}
      {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}

      {{!-- Benefit Name --}}
      {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginBenefitName'}}
      {{#*inline "item-field-inputs"}}
      <input type="text" name="system.benefit.name" value="{{system.benefit.name}}" />
      {{/inline}}
      {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}

      {{!-- Benefit Description --}}
      {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginBenefitDescription'}}
      {{#*inline "item-field-inputs"}}
      <textarea rows="5" name="system.benefit.description">{{system.benefit.description}}</textarea>
      {{/inline}}
      {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}
    </div>
  </section>
</form>
