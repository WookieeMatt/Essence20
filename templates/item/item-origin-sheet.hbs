<form class="{{cssClass}}" autocomplete="off">
  {{!-- Item Sheet Header --}}
  {{> "systems/essence20/templates/item/parts/item-header.hbs"}}

  {{!-- Item Sheet Body --}}
  <section class="sheet-body item-sheet">
    {{!-- Essence Increase Options --}}
    {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginEssenceIncreaseOptions'}}
    {{#*inline "item-field-inputs"}}
    <textarea rows="5" name="system.essenceIncreaseOptions">{{system.essenceIncreaseOptions}}</textarea>
    {{/inline}}
    {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}

    {{!-- Starting Health --}}
    {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginStartingHealth'}}
    {{#*inline "item-field-inputs"}}
    <textarea rows="5" name="system.startingHealth">{{system.startingHealth}}</textarea>
    {{/inline}}
    {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}

    {{!-- Bonus Skill Levels --}}
    {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginBonusSkillLevels'}}
    {{#*inline "item-field-inputs"}}
    <textarea rows="5" name="system.bonusSkillLevels">{{system.bonusSkillLevels}}</textarea>
    {{/inline}}
    {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}

    {{!-- Ground Movement --}}
    {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginGroundMovement'}}
    {{#*inline "item-field-inputs"}}
    <textarea rows="5" name="system.groundMovement">{{system.groundMovement}}</textarea>
    {{/inline}}
    {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}

    {{!-- Languages --}}
    {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginLanguages'}}
    {{#*inline "item-field-inputs"}}
    <textarea rows="5" name="system.languages">{{system.languages}}</textarea>
    {{/inline}}
    {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}

    {{!-- Benefit Name --}}
    {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginBenefitName'}}
    {{#*inline "item-field-inputs"}}
    <input type="text" name="system.benefit.name" value="{{system.benefit.name}}" />
    {{/inline}}
    {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}

    {{!-- Benefit Description --}}
    {{#> "systems/essence20/templates/item/parts/item-sheet-field.hbs" label='E20.OriginBenefitDescription'}}
    {{#*inline "item-field-inputs"}}
    <textarea rows="5" name="system.benefit.description">{{system.benefit.description}}</textarea>
    {{/inline}}
    {{/"systems/essence20/templates/item/parts/item-sheet-field.hbs"}}

    {{!-- Description Section --}}
    {{> "systems/essence20/templates/item/parts/item-description.hbs"}}
  </section>
</form>
