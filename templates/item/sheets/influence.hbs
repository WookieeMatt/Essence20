<form class="{{cssClass}}" autocomplete="off">
  {{!-- Item Sheet Header --}}
  {{> "systems/essence20/templates/item/parts/header.hbs"}}

  {{!-- Item Sheet Body --}}
  <section class="sheet-body item-sheet">

    {{!-- Influence Skills --}}
    {{#> "systems/essence20/templates/item/parts/sheet-field.hbs" label='E20.InfluenceSkill'}}
    {{#*inline "item-field-edit"}}
    <a class="trait-selector" style="flex-grow: 0;" data-options="influenceSkill" data-target="system.influenceSkill"
      title="{{localize 'E20.SkillSelector'}}">
      <i class="fas fa-edit"></i>
    </a>
    {{/inline}}

    {{#*inline "item-field-inputs"}}
    <div class="flex-group-right chip-section">
      {{#each item.system.influenceSkill as |name|}}
      <span class="chip" name="chip.skills.{{type}}">{{lookup @root.config.skills name}}</span>
      {{/each}}
    </div>
    {{/inline}}
    {{/"systems/essence20/templates/item/parts/sheet-field.hbs"}}

    {{!-- Influence Perk --}}
    {{#> "systems/essence20/templates/item/parts/sheet-field.hbs" label='E20.InfluencePerk' influencePerks=@root.influencePerks}}
    {{#*inline "item-field-inputs"}}
    {{#if @root.influencePerks}}
    <div class="flexcol">
      {{#each influencePerks as |influencePerk|}}
      <div class="flexrow influencePerk" data-influencePerk-id="{{influencePerk._id}}">
        <ul class="items-list">
          <li class="item">
            <div class="flexrow" style="align-items: center; flex-wrap: nowrap">
              <label style="white-space: nowrap; overflow: hidden;">{{influencePerk.name}}</label>
              <div class="item-controls">
                <a class="item-control influencePerk-delete flex-right" title="{{localize 'E20.DeleteInfluencePerk'}}">
                  <i class="fas fa-trash"></i>
                </a>
              </div>
            </div>
          </li>
        </ul>
      </div>
      {{/each}}
    </div>
    {{else}}
      <label>{{localize 'E20.InfluencePerkDrop'}}</label>
    {{/if}}
    {{/inline}}
    {{/"systems/essence20/templates/item/parts/sheet-field.hbs"}}

    {{!-- Hang-Ups --}}
    {{#> "systems/essence20/templates/item/parts/sheet-field.hbs" label='E20.HangUps' hangUps=@root.hangUps}}
    {{#*inline "item-field-inputs"}}
    {{#if @root.hangUps}}
    <div class="flexcol">
      {{#each hangUps as |hangUp|}}
      <div class="flexrow hangUp" data-hangUp-id="{{hangUp._id}}">
        <ul class="items-list">
          <li class="item">
            <div class="flexrow" style="align-items: center; flex-wrap: nowrap">
              <label style="white-space: nowrap; overflow: hidden;">{{hangUp.name}}</label>
              <div class="item-controls">
                <a class="item-control hangUp-delete flex-right" title="{{localize 'E20.DeleteHangUp'}}">
                  <i class="fas fa-trash"></i>
                </a>
              </div>
            </div>
          </li>
        </ul>
      </div>
      {{/each}}
    </div>
    {{else}}
      <label>{{localize 'E20.hangUpDrop'}}</label>
    {{/if}}
    {{/inline}}
    {{/"systems/essence20/templates/item/parts/sheet-field.hbs"}}

    {{!-- Description Section --}}
    {{> "systems/essence20/templates/item/parts/description.hbs"}}
  </section>
</form>
