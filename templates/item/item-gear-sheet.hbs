<form class="{{cssClass}}" autocomplete="off">

  {{!-- Item Sheet Header --}}
  {{> "systems/essence20/templates/item/parts/item-header.hbs"}}

  {{!-- Item Sheet Body --}}
  <section class="sheet-body item-sheet">
    <div class="flexrow">
      <label>{{localize 'E20.gearEffectArea'}}</label>
      <input type="number" name="system.effectArea" value="{{system.effectArea}}" />
    </div>

    <div class="flexrow">
      <label>{{localize 'E20.gearEffectShape'}}</label>
      <select name="system.effectShape">
        {{#select system.effectShape}}
        {{#each config.effectShapes as |name type|}}
        <option value="{{type}}">{{localize name}}</option>
        {{/each}}
        {{/select}}
      </select>
    </div>

    <div class="flexrow">
      <label>{{localize config.lightRanges.bright}}</label>
      <input type="number" name="system.lightRange.bright" value="{{system.lightRange.bright}}" />
    </div>

    <div class="flexrow">
      <label>{{localize config.lightRanges.dim}}</label>
      <input type="number" name="system.lightRange.dim" value="{{system.lightRange.dim}}" />
    </div>

    <div class="flexrow">
      <label>{{localize 'E20.gearQuantity'}}</label>
      <input type="number" name="system.quantity" value="{{system.quantity}}" />
    </div>

    <div class="flexrow">
      <label>{{localize 'E20.gearToughness'}}</label>
      <input type="number" name="system.toughness" value="{{system.toughness}}" />
    </div>

    {{!-- Description Section --}}
    {{> "systems/essence20/templates/item/parts/item-description.hbs"}}
  </section>

</form>
