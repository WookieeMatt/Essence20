<form class="{{cssClass}}" autocomplete="off">

  {{!-- Item Sheet Header --}}
  {{> "systems/essence20/templates/item/parts/item-header.hbs"}}

  {{!-- Item Sheet Body --}}
  <section class="sheet-body item-sheet">
    <div class="flexrow">
      <label>{{localize 'E20.weaponUpgradeAvailability'}}</label>
      <select name="system.availability">
        {{#select system.availability}}
        {{#each config.availabilities as |name type|}}
        <option value="{{type}}">{{localize name}}</option>
        {{/each}}
        {{/select}}
      </select>
    </div>

    <div class="flexrow">
      <label>{{localize 'E20.weaponUpgradeBenefit'}}</label>
      <input type="text" name="system.benefit" value="{{system.benefit}}" />
    </div>

    <div class="flexrow">
      <label>{{localize 'E20.weaponUpgradePrerequisite'}}</label>
      <input type="text" name="system.prerequisite" value="{{system.prerequisite}}" />
    </div>

    {{!-- Description Section --}}
    {{> "systems/essence20/templates/item/parts/item-description.hbs"}}
  </section>

</form>
